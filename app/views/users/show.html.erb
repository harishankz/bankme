<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4>User Name : <%= @user.user_name %></h4>
      <h5> Details </h5>
      <div class="row">
        <div class="col-xs-6">
          <table class="table  table-striped table-hover">
            <thead>
              <th> Name </th>
              <th> Date of Birth </th>
              <th> Gender </th>
              <th> Email </th>
              <th> Phone Number </th>
              <th> Role </th>
            </thead>
            <tbody>
            <td> <%= @user.user_name %> </td>
            <td> <%= @user.date_of_birth %> </td>
            <td> <%= @user.gender %> </td>
            <td> <%= @user.email %> </td>
            <td> <%= @user.phone_number %> </td>
            <td> <%= @role.role_name %> </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>





