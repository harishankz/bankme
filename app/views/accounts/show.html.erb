<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4>User Name : <%= @account.customer_name %></h4>
      <h5> Details </h5>
      <div class="row">
        <div class="col-xs-8">
          <table class="table  table-striped table-hover">
            <thead>
            <th> Customer Name </th>
            <th> Customer ID </th>
            <th> Open Date </th>
            <th> Branch </th>
            <th> Minor Indicator </th>
            </thead>
            <tbody>
            <td> <%= @account.customer_name %> </td>
            <td> <%= link_to @account.customer_id, user_path(@account.customer_id) %> </td>
            <td> <%= @account.open_date %> </td>
            <td> <%= @account.branch %> </td>
            <td> <%= @account.minor_indicator %> </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= link_to 'Edit', edit_account_path(@account) %> |
  <%= link_to 'Back', accounts_path %>
</div>


