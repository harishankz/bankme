<h1>Accounts</h1>

<% if @accounts.present? %>
  <div class="row">
    <div class="col-xs-12">

      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th> Customer Name </th>
          <th colspan="3"> Actions </th>
        </tr>
        </thead>

        <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td> <%= account.customer_name %></td>
            <td><%= link_to 'Show', account_path(account) %></td>
            <td><%= link_to 'Edit', edit_account_path(account) %></td>
            <td><%= link_to 'Destroy', account_path(account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-info">
    No Accounts!
  </div>
<% end %>



